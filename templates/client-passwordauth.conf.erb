# OpenVPN daemon settings

client
remote <%= remote_host %> <%= remote_port %>
proto udp
comp-lzo

# We need to define a static interface to configure firewalling properly
dev <%= tunif %>
nobind
persist-key
persist-tun
keepalive 10 120

user <%= scope.lookupvar('openvpn::params::nobody') %>
group <%= scope.lookupvar('openvpn::params::nogroup') %>
status <%= scope.lookupvar('openvpn::params::config_dir') %>/openvpn-status.log.<%= title %>
verb 4

ns-cert-type server

ca <%= scope.lookupvar('openvpn::params::config_dir') %>/<%= title %>-ca.crt
tls-auth <%= scope.lookupvar('openvpn::params::config_dir') %>/<%= title %>-ta.key 1
auth-user-pass <%= scope.lookupvar('openvpn::params::config_dir') %>/<%= title %>.pass
